-var github = "https://github.com/AletzMan";
-var linkedin = "https://www.linkedin.com/in/alejandro-garcia-alonso-596788b8/";

-var technologies = ["html", "css", "javascript", "sass", "pug", "git", "github", "csharp", "netcore"];
-var sourceLogos = "./assets/icons/";

mixin createLogosImages
    each val, index in technologies
        div(class="logos__name") #[img(class="logos--"+technologies[index]+" logo" src=sourceLogos+technologies[index]+"-logo.svg" alt="Logo "+technologies[index] loading="lazy" draggable="false")] #[br]
            span=technologies[index]  
        

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./styles/main_style.min.css")
        link(rel="shortcut icon" href="./assets/logos/logo-tab.svg")
        script(defer src="./scripts/main_script.prod.js") 
        title Alejandro Garcia
    body 
        header(class="header")
            div(class="header__container")
                img(class="header__logo" src="./assets/logos/logo-large.svg", alt="logo Alejandro Garcia" loading="lazy" draggable="false")
                ul(class="header__menu menu")
                    li(class="menu__list menu__list--home") #[a(class="menu__list--link" href="#section__home" title="Go to Home" rel="noopener noreferrer") HOME]
                    li(class="menu__list menu__list--skills") #[a(class="menu__list--link" href="#section__skills" title="Go to Skills" rel="noopener noreferrer")  SKILLS]
                    li(class="menu__list menu__list--projects") #[a(class="menu__list--link" href="#section__projects" title="Go to Projects" rel="noopener noreferrer")  PROJECTS]
                    li(class="menu__list menu__list--about") #[a(class="menu__list--link" href="#section__about" title="Go to About Me" rel="noopener noreferrer")  ABOUT ME]
                    li(class="menu__list menu__list--contact") #[a(class="menu__list--link" href="#section__contact" title="Go to Contact" rel="noopener noreferrer")  CONTACT]
                    div(class="menu__selection")
        div(class="menumobil__content")
        section(id="section__home" class="home section")
            h2(class="home__title title") HOME
            div(class="home__description description") 
                p(class="description__name") Hey, #[br]My name is  #[br]#[span(class="name") Alejandro.]
                span(class="description__profesion")
            span(class="home__idea") "Turning ideas and desing into code"        
            img(class="home__photo" src="./assets/photos/my_photo.jpg" alt="photo of Alejandro Garcia" loading="lazy" draggable="false")
            a(class="home__link--github" href=github title="Go To GitHub" target="_blank" rel="noopener noreferrer")
                img(class="home__icon--github" src="./assets/icons/github-icon-hover.svg" alt="icon of repositorio from  Alejandro Garcia" loading="lazy" draggable="false")
                span(class="github__name") GitHub
            a(class="home__link--linkedin"  href=linkedin title="Go To Linkedin" target="_blank" rel="noopener noreferrer")   
                img(class="home__icon--linkedin" src="./assets/icons/linkedin-icon-hover.svg" alt="photo of linkedin from  Alejandro Garcia" loading="lazy" draggable="false")
                span(class="linkedin__name") Linkedin
        section(class="skills section" id="section__skills")
            h2(class="skills__title title") SKILLS
            div(class="skills__logos logos")
                button(class="logos--webdev technologies" href="#") Web Developer
                button(class="logos--mobil technologies" href="#") Mobil Developer
                button(class="logos--desktop technologies" href="#") Desktop Developer
                button(class="logos--test technologies" href="#") Test and Measurement Systems
                button(class="logos--all technologies" href="#") All Technologies
                +createLogosImages                
        section(class="projects section" id="section__projects")
            h2(class="projects__title title") PROJECTS
        section(class="about section" id="section__about")
            h2(class="about__title title") ABOUT ME
        section(class="contact section" id="section__contact")
            h2(class="contact__title title") CONTACT
        footer(class="footer")
            p(class="footer__copyright") Alejandro Garcia Alonso
            div(class="footer__menumobil menumobil")
                div(class="menumobil__link--select") HOME
                ul(class="menumobil__links")
                    li(class="menumobil__links--home link")
                    li(class="menumobil__links--skills link")
                    li(class="menumobil__links--projects link")
                    li(class="menumobil__links--about link")
                    li(class="menumobil__links--contact link")
                
